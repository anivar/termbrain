# AI Provider API Keys
# ===================

# Anthropic Claude
ANTHROPIC_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.1

# Google Gemini
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro-latest
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_OUTPUT_TOKENS=8192

# OpenAI GPT
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.3

# Optional: Additional Providers
# =============================
COHERE_API_KEY=your_cohere_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here

# TermBrain Configuration
# ======================
TERMBRAIN_DATA_DIR=/path/to/your/termbrain/data
TERMBRAIN_DATABASE_URL=sqlite:///path/to/termbrain.db

# Analysis Settings
# ================
PRIMARY_PROVIDER=claude
FALLBACK_PROVIDER=gemini
CONSENSUS_THRESHOLD=0.7
ENABLE_CROSS_VALIDATION=true
ENABLE_PERFORMANCE_TRACKING=true
MAX_CONCURRENT_REQUESTS=3

# Privacy and Security
# ===================
SANITIZE_PATHS=true
SANITIZE_SECRETS=true
EXCLUDE_ENV_VARS=PASSWORD,SECRET,TOKEN,KEY,PRIVATE

# Cost Management
# ==============
DAILY_BUDGET_USD=10.0
MONTHLY_BUDGET_USD=200.0
ENABLE_COST_OPTIMIZATION=true

# Cache Settings
# =============
ENABLE_CACHING=true
CACHE_TTL_HOURS=24
MAX_CACHE_SIZE_MB=100

# Logging and Monitoring
# =====================
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_ENDPOINT=http://localhost:8080/metrics

# Rate Limiting
# ============
CLAUDE_REQUESTS_PER_MINUTE=50
GEMINI_REQUESTS_PER_MINUTE=60
OPENAI_REQUESTS_PER_MINUTE=40

# Feature Flags
# ============
ENABLE_VISION_ANALYSIS=true
ENABLE_CODE_GENERATION=true
ENABLE_REAL_TIME_SUGGESTIONS=false
ENABLE_SECURITY_SCANNING=true
ENABLE_PERFORMANCE_ANALYSIS=true

# Development Settings
# ===================
DEBUG_MODE=false
MOCK_RESPONSES=false
ENABLE_VERBOSE_LOGGING=false